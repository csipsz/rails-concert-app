<%= render partial: 'layouts/error', locals: {object: @concert} %>

<%= form_for(@concert) do |f| %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :capacity %>
  <%= f.number_field :capacity %>

    <%= f.fields_for :comments do |comm|  %>
        <%= comm.label :comment %>
        <%= comm.text_field :content %>
    <% end  %>

  <%= f.submit %>


<% end %>