<%= form_for ticket do |f| %>

<%= f.label :category %>
<%= f.select :category, [1, 2, 3, 4 ]%>

<%= f.label :quantity %>
<%= f.select :quantity, [1, 2, 3, 4, 5, 6]%>

<%= f.collection_select :concert_id, Concert.all.order_by_name, :id, :concert_info, include_blank: "Select Concert" %>
<%= f.submit %>
<% end %>
