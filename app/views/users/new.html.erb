<h1>User Sign Up</h1>

<%= render partial: 'layouts/error', locals: {object: @user} %>


<%= form_for(@user) do |f| %>

  <%= f.label :username %><br>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign Up" %>


<% end %>